  "ui": {
    "theme": {
      "primary": "#3b82f6",
      "secondary": "#8b5cf6",
      "success": "#10b981",
      "warning": "#f59e0b",
      "danger": "#ef4444",
      "info": "#06b6d4"
    },
    "animations": {
      "enabled": true,
      "duration": 300,
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "correlation": {
      "showSimilarityScore": true,
      "showCorrelationFactors": true,
      "maxGroupsToShow": 10,
      "autoUpdate": true
    }
  },
  "notifications": {
    "enabled": true,
    "duration": 5000,
    "position": "top-right",
    "types": ["success", "error", "info", "warning"]
  }
