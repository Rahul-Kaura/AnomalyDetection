{
  "system": {
    "name": "Enterprise Alert Correlation System",
    "version": "2.0.0",
    "description": "Advanced incident correlation and MTTR reduction platform"
  },
  "correlation": {
    "rules": [
      {
        "name": "Service Correlation",
        "weight": 0.8,
        "factors": ["service", "component"],
        "threshold": 0.7,
        "description": "Groups alerts from the same service and component"
      },
      {
        "name": "Error Pattern Correlation",
        "weight": 0.9,
        "factors": ["error_code", "severity"],
        "threshold": 0.8,
        "description": "Groups alerts with similar error patterns and severity"
      },
      {
        "name": "Resource Correlation",
        "weight": 0.7,
        "factors": ["resource", "component"],
        "threshold": 0.6,
        "description": "Groups alerts affecting related resources"
      },
      {
        "name": "Temporal Correlation",
        "weight": 0.6,
        "factors": ["time_window"],
        "threshold": 0.5,
        "description": "Groups alerts that occur within similar time windows"
      },
      {
        "name": "Source Correlation",
        "weight": 0.5,
        "factors": ["source"],
        "threshold": 0.4,
        "description": "Groups alerts from the same monitoring source"
      }
    ],
    "globalThreshold": 0.6,
    "maxGroupSize": 10
  },
  "k8sThresholds": {
    "rules": [
      {
        "name": "CrashLoopBackOff bursts",
        "key": ["namespace", "involvedObject.name"],
        "match": { "reason": "BackOff", "type": "Warning" },
        "threshold": 5,
        "severity": "high",
        "window": 300000,
        "cooldown": 600000
      },
      {
        "name": "ImagePull failures",
        "key": ["namespace", "reason"],
        "match": { "reason": "Failed", "message": "ImagePull" },
        "threshold": 3,
        "severity": "medium",
        "window": 300000,
        "cooldown": 600000
      },
      {
        "name": "Node not ready",
        "key": ["involvedObject.kind", "involvedObject.name"],
        "match": { "reason": "NodeNotReady" },
        "threshold": 1,
        "severity": "critical",
        "window": 300000,
        "cooldown": 600000
      },
      {
        "name": "High Pod Evictions",
        "key": ["namespace", "reason"],
        "match": { "reason": "Evicted" },
        "threshold": 10,
        "severity": "medium",
        "window": 600000,
        "cooldown": 900000
      },
      {
        "name": "ConfigMap Change Spike",
        "key": ["namespace", "involvedObject.kind"],
        "match": { "involvedObject.kind": "ConfigMap" },
        "threshold": 7,
        "severity": "low",
        "window": 900000,
        "cooldown": 1200000
      }
    ]
  },
